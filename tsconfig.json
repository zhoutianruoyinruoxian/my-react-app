{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "ESNext",
    "jsx": "react",
    "experimentalDecorators": true,
    "allowUnreachableCode": true,
    "allowJs": true,
    "outDir": "/", // 解决tsconfig.json文件报错无法写入文件的问题
    "baseUrl": ".",
    "locale": "zh-cn",
    "paths": {
      "src": [
        "./src"
      ],
      "api": [
        "./src/api"
      ],
      "@": [
        "./src/components"
      ],
      "raui": [
        "./src/components"
      ],
      "containers": [
        "./src/containers"
      ],
      "lib": [
        "./src/library"
      ],
      "pages": [
        "./src/pages"
      ],
      "hooks": [
        "./src/hooks"
      ],
      "variable": [
        "./src/style/variable.scss"
      ],
    },
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}